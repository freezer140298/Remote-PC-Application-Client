<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/socketGreetingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/greeting_socket_input_prompt"
        android:autoSizeTextType="uniform"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/socketAddrEditText"
        android:hint="@string/socket_server_ip_addr"
        android:inputType="number|numberDecimal"
        android:digits="0123456789."
        android:autofillHints="" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/socketPortEditText"
        android:hint="@string/socket_server_port"
        android:inputType="number"
        android:autofillHints="" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/socketConnectButton"
        android:text="@string/socket_connect_button" />

</LinearLayout>